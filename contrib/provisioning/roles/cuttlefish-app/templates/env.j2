CUTTLEFISH_HASH_SALT="{{ cuttlefish_hash_salt }}"
POSTFIX_LOG_PATH=/var/log/mail.log
POSTFIX_SMTP_PORT=25
POSTFIX_SMTP_HOST=localhost
CUTTLEFISH_DOMAIN={{ cuttlefish_domain }}
CUTTLEFISH_DOMAIN_CERT_CHAIN_FILE={{ cuttlefish_cert }}
CUTTLEFISH_DOMAIN_PRIVATE_KEY_FILE={{ cuttlefish_private_key }}
DISABLE_SSL={{ disable_ssl }}

# Rails setup
SECRET_KEY_BASE={{ secret_key_base }}
DEVISE_SECRET_KEY={{ devise_secret_key }}

{% if google_analytics_code is defined %}
# For Google analytics
GOOGLE_ANALYTICS_CODE={{ google_analytics_code }}
{% endif%}

{% if skylight_application is defined %}
# For skylight.io
SKYLIGHT_APPLICATION={{ skylight_application }}
SKYLIGHT_AUTHENTICATION={{ skylight_authentication }}
{% endif %}

{% if new_relic_license_key is defined %}
# For New Relic (these need to be set in development to register deployments. Ugh)
NEW_RELIC_LICENSE_KEY={{ new_relic_license_key }}
NEW_RELIC_APP_NAME={{ new_relic_app_name }}
{% endif %}

{% if honeybadger_api_key is defined %}
# For Honeybadger
HONEYBADGER_API_KEY={{ honeybadger_api_key }}
{% endif %}

RACK_ENV=production
WEB_CONCURRENCY={{ web_concurrency }}
WEB_LISTEN={{ web_listen }}
